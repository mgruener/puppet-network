<% if defined?(@ipv6_privacy_prefer_public_ip) -%>
IPV6_PRIVACY_PREFER_PUBLIC_IP=<%= @ipv6_privacy_prefer_public_ip  == 'true' ? 'yes' : 'no' %>
<% end -%>
<% if defined?(@linkdelay) -%>
LINKDELAY=<%= @linkdelay %>
<% end -%>
<% if defined?(@macaddr) -%>
