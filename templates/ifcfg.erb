<% if defined?(@bondig_opts) -%>
BONDING_OPTS="<%= @bondig_opts %>"
<% end -%>
<% if defined?(@bootproto) -%>
BOOTPROTO=<%= @bootproto %>
<% end -%>
<% if defined?(@broadcast) -%>
BROADCAST=<%= @broadcast %>
<% end -%>
<% if defined?(@delay) -%>
