ETHTOOL_OPTS="<%= @ethtool_opts %>"
<% end -%>
<% if defined?(@hotplug) -%>
HOTPLUG=<%= @hotplug  == 'true' ? 'yes' : 'no' %>
<% end -%>
<% if defined?(@ifhwaddr) -%>
HWADDR=<%= @ifhwaddr %>
<% end -%>
<% if defined?(@ipaddr) -%>
IPADDR=<%= @ipaddr %>
<% end -%>
<% if defined?(@ipv6addr) -%>
IPV6ADDR=<%= @ipv6addr %>
