<% end -%>
<% if defined?(@device) -%>
DEVICE=<%= @device %>
<% end -%>
<% if defined?(@dhcp_hostname) -%>
DHCP_HOSTNAME="<%= @dhcp_hostname %>"
<% end -%>
<% if defined?(@dhcpv6c) -%>
DHCPV6C=<%= @dhcpv6c  == 'true' ? 'yes' : 'no' %>
<% end -%>
<% if defined?(@dhcpv6c_options) -%>
DHCPV6C_OPTIONS="<%= @dhcpv6c_options %>"
<% end -%>
<% if defined?(@dns1) -%>
