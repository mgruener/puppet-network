<% end -%>
<% if defined?(@network) -%>
NETWORK=<%= @network %>
<% end -%>
<% if defined?(@nm_controlled) -%>
NM_CONTROLLED=<%= @nm_controlled == 'true' ? 'yes' : 'no' %>
<% end -%>
<% if defined?(@onboot) -%>
ONBOOT=<%= @onboot == 'true' ? 'yes' : 'no' %>
<% end -%>
<% if defined?(@peerdns) -%>
PEERDNS=<%= @peerdns  == 'true' ? 'yes' : 'no' %>
<% end -%>
<% if defined?(@slave) -%>
SLAVE=<%= @slave  == 'true' ? 'yes' : 'no' %>
<% end -%>
<% if defined?(@srcaddr) -%>
SRCADDR=<%= @srcaddr %>
<% end -%>
<% if defined?(@userctl) -%>
USERCTL=<%= @userctl  == 'true' ? 'yes' : 'no' %>
<% end -%>
<% if defined?(@scope) -%>
SCOPE="<%= @scope %>"
<% end -%>
<% if defined?(@stp) -%>
STP=<%= @stp  == 'true' ? 'yes' : 'no' %>
<% end -%>
<% if defined?(@name) -%>
NAME="<%= @name %>"
<% end -%>
<% if defined?(@uuid) -%>
UUID="<%= @uuid %>"
<% end -%>
<% if defined?(@type) -%>
TYPE="<%= @type %>"
<% end -%>
<% if defined?(@gateway) -%>
GATEWAY=<%= @gateway %>
<% end -%>
<% if defined?(@ipv6init) -%>
IPV6INIT=<%= @ipv6init  == 'true' ? "yes" : "no" %>
<% end -%>
